{
  "name": "leave-request-system",
  "version": "1.0.0",
  "description": "Full-stack leave request management system with NestJS backend and Next.js frontend",
  "scripts": {
    "start": "./start-dev.sh",
    "dev": "./start-dev.sh",
    "backend:dev": "cd leave-request-system-backend && npm run start:dev",
    "frontend:dev": "cd leave-request-system-frontend && npm run dev",
    "backend:build": "cd leave-request-system-backend && npm run build",
    "frontend:build": "cd leave-request-system-frontend && npm run build",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:test": "cd leave-request-system-backend && npm run test",
    "frontend:test": "cd leave-request-system-frontend && npm run build",
    "test": "npm run backend:test && npm run frontend:test",
    "install:all": "cd leave-request-system-backend && npm install && cd ../leave-request-system-frontend && npm install",
    "clean": "rm -rf leave-request-system-backend/node_modules leave-request-system-backend/dist leave-request-system-frontend/node_modules leave-request-system-frontend/.next"
  },
  "keywords": [
    "nestjs",
    "nextjs",
    "typescript",
    "mysql",
    "jwt",
    "rbac",
    "leave-management",
    "shadcn",
    "tailwind"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
